<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:id="@+id/caption"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:text="H"/>
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:id="@+id/description"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff ff "/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/date"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="04:20"/>

        <TextView
            android:singleLine="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.08.2018"/>
    </LinearLayout>

</LinearLayout>